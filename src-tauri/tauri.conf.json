{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420/",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Arachnoid",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.Arachnoid.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["../public_key.pem"]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "fullscreen": false,
        "resizable": true,
        "title": "arachnoid",
        "url": "/indexHtml/main.html",
        "visible": false,
        "width": 800,
        "height": 600
      },
      {
        "label": "activate",
        "fullscreen": false,
        "resizable": false,
        "visible": false,
        "title": "激活",
        "url": "/indexHtml/activate.html",
        "width": 600,
        "height": 400
      }
    ]
  }
}
